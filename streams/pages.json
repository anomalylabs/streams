{
    "slug": "pages",
    "route": "/{id}",
    "template": "page",
    "rules": {
        "sort": [
            "required",
            "testing"
        ]
    },
    "validators": {
        "testing": {
            "handler": "Anomaly\\Streams\\Ui\\Form\\Testing",
            "message": "Testing custom validation rule."
        }
    },
    "fields": {
        "title": {
            "type": "text",
            "required": true,
            "rules": [
                "min:255"
            ]
        },
        "intro": "textarea",
        "body": "text|textarea",
        "sort": "integer"
    }
}
